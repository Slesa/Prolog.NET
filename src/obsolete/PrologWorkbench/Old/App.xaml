<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:System="clr-namespace:System;assembly=mscorlib" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Prolog.Workbench.App" 
             Startup="OnApplicationStartup" Exit="OnApplicationExit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PrologWorkbench.Theme;component/Themes/Generic.xaml" />
                <ResourceDictionary>
                    <System:String x:Key="ApplicationTitle">Prolog.NET</System:String>
                    <SolidColorBrush x:Key="HeadingBrush" Color="#FFE2FFC8"/>
                </ResourceDictionary>
                <ResourceDictionary Source="/PrologWorkbench.Theme;component/Simple Styles.xaml"/>
                <ResourceDictionary Source="/PrologWorkbench.Theme;component/Resources/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
            
    </Application.Resources>
</Application>
