<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="/PrologWorkbench.Theme;component/Resources/Colors.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <CornerRadius x:Key="Corner.Main">16</CornerRadius>
  <CornerRadius x:Key="Corner.Main.Inner">12</CornerRadius>
  <CornerRadius x:Key="Corner.Module">16</CornerRadius>
  <CornerRadius x:Key="Corner.Module.Bottom">0,0,16,16</CornerRadius>
  <CornerRadius x:Key="Corner.Module.Top">16,16,0,0</CornerRadius>

  <!-- Global: Font -->
  <Style x:Key="Control.Base" TargetType="{x:Type Control}">
    <!-- Setter Property="FontFamily" Value="Segoe UI" / -->
    <Setter Property="FontFamily" Value="Segoe UI" />
  </Style>
  
  <Style BasedOn="{StaticResource Control.Base}" TargetType="{x:Type Control}">
    <!-- Setter Property="FontFamily" Value="Segoe UI" / -->
    <Setter Property="FontFamily" Value="SketchFlow Print" />
  </Style>
  
  <Style x:Key="InvisibleSplitter" TargetType="{x:Type GridSplitter}">
    <Setter Property="Width" Value="3" />
    <!--<Setter Property="Background" Value="{StaticResource Color.SplitterBackground}" />-->
    <Setter Property="Opacity" Value="0" />
  </Style>
  
  <Style BasedOn="{StaticResource InvisibleSplitter}" TargetType="{x:Type GridSplitter}" />

</ResourceDictionary>